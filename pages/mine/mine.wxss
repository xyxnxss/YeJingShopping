/* pages/mine/mine.wxss */

page {
  background-color: rgb(241, 241, 241);
}

.title {
  height: 250rpx;
  background: linear-gradient(#f66, #ff66668c);
  border-radius: 0 0 60rpx 60rpx;
  padding: 30rpx;
}

.title_flex {
  height: 100rpx;
  display: flex;
}

.title_flex image {
  background-color: #fff;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.title_flex view {
  margin: auto 20rpx;
  color: #fff;
  letter-spacing: 3rpx;
  font-weight: blod;
}

.title_but {
  margin: auto 20rpx;
  height: 60rpx;
  padding: 0;
  background-color: rgba(255, 255, 255, 0);
  color: #fff;
  border: none;
  font-size: 27rpx;
}

.order {
  height: 260rpx;
  background-color: #fff;
  margin: 30rpx 0;
  border-radius: 15rpx;
  box-shadow: 0px 2px 10px #cacaca;
  overflow: hidden;
}

.orderflex {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.orderflex>view {
  height: 120rpx;
  width: 100rpx;
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.orderflex view>image {
  height: 70rpx;
  width: 70rpx;
  margin: auto;
}

.orderflex view>view {
  margin: 10rpx 0;
}

.place {
  height: 240rpx;
  background-color: #fff;
  margin: 140rpx 30rpx 30rpx 30rpx;
  border-radius: 15rpx;
  box-shadow: 0px 2px 10px #cacaca;
  overflow: hidden;
}

.group {
  background-color: #fff;
  margin: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0px 2px 10px #cacaca;
  overflow: hidden;
}

.group_wrap {
  height: 100rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
  border-bottom: 1rpx solid gainsboro;
}

.group_wrap view {
  margin: auto 0;
}

.group_left {
  font-size: 50rpx;
  font-weight: blod;
  padding: 0 30rpx;
}

.group_right {
  display: flex;
}

.group_right>view {
  padding: 0 20rpx;
  border-right: 1px solid gainsboro;
  font-size: 27rpx;
}

.group_right>view:last-child {
  border: none;
}

.group_share {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  height: 55rpx;
  font-size: 27rpx;
}

.group_share>view {
  margin: auto 0;
}

.group_share>view text {
  color: #f66;
}

.group_share>button {
  margin: 0;
  padding: 0 20rpx;
  font-size: 27rpx;
  color: #fff;
  background-color: #f66;
}

.placewrap {
  padding: 30rpx;
}

.placewrap_left {
  color: #f66;
  font-weight: bold;
}

.placewrap_right {
  font-size: 27rpx;
  color: gray;
  margin: 20rpx 0;
}

.ma {
  padding: 30rpx;
  background-color: #fff;
  margin: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0px 2px 10px #cacaca;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  height: 32vw;
}

.ma image {
  width: 27vw;
  height: 27vw;
  margin: auto;
}

.ma view {
  margin: auto;
  color: #f66;
}

.footer {
  width: 100vw;
  padding: 50rpx 0 100rpx 0;
  text-align: center;
  color: gray;
  font-size: 25rpx;
}
